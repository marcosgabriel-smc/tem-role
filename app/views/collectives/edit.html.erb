<div class="container">
  <h1>Editing collective</h1>
  <%= render "form", collective: @collective %>
  <hr>
  <% if policy(@collective).destroy? %>
    <%= button_to(
      "Destroy this collective",
      @collective,
      method: :delete,
      data: {
        turbo_confirm: 'Are you sure?'
      }
     ) %>
  <% end %>
  <hr>
  <div>
    <%= link_to "Show this collective", @collective %> |
    <%= link_to "Back to collectives", collectives_path %>
  </div>
</div>
