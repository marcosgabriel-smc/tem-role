<div class="container">
  <h1 class="text-capitalize">Coletivos</h1>
  <div class="row align-items-start">
    <div id="collectives" class= "row justify-content-start mb-3">
      <% @collectives.reverse.each do |collective| %>
        <%= render "collective_card", collective: %>
      <% end %>
    </div>
  </div>
  <% if policy(@collectives).new? %>
    <hr>
    <%= link_to "New collective", new_collective_path, class: "text-muted" %>
  <% end %>
</div>
