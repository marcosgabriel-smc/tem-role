<div class="container">
  <h1 class="text-capitalize">Coletivos</h1>
  <div id="map-container" class="d-flex row" data-controller="map">
    <div class="col-8">
      <%= render "map" %>
    </div>
    <div class="col">
      <h2 id="state-name"></h2>
    </div>
  </div>
  <div class="row align-items-start">
    <div id="collectives" class= "row justify-content-start mb-3">
      <% @collectives.each do |collective| %>
        <%= render "collective_card", collective: %>
      <% end %>
    </div>
  </div>
  <% if policy(@collectives).new? %>
    <hr>
    <%= link_to "New collective", new_collective_path, class: "text-muted" %>
  <% end %>
</div>
