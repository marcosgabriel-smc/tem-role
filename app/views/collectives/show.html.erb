<!-- HERO BANNER DO COLLETIVO -->
<div
  class= "masthead justify-content-center align-items-center d-flex"
  style="background-image: url('<%= cl_image_path @collective.banner.key, crop: :fill unless @collective.banner.key.nil? %>');">
  <div class="row d-flex color-overlay">
    <div class="text-center d-flex row">
      <div class="align-self-end">
        <h1 class="colec-title"><%= @collective.name %></h1>
      </div>
      <p class="colectivedesc text-break text-start fw-semibold"><%= @collective.description %></p>
    </div>
    <div class= "align-self-end d-flex justify-content-evenly w-100">
      <div class="d-flex text-end text-break pb-4">
        <% @collective.genres.each do |genre| %>
          <div class="m-3">
            <h5><%= genre.name.capitalize %></h5>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <!-- ROUTES BUTTONS ##TO-DO CENTER AND STYLE IT-->
  <div class="m-4">
    <%= link_to "Back to collectives", collectives_path %>
    <% if policy(@collective).edit? %>
      | <%= link_to "Edit this collective", edit_collective_path(@collective) %>
    <% end %>
    <% if current_user == @collective.owner && policy(Event).new? %>
      | <%= link_to 'Create a new event', new_event_path %>
    <% end %>
  </div>
  <!-- DIV BELOW THE BUTTONS - CONTAINING THE GENRES AND MEMBERS -->
  <div class="d-flex flex-row m-4 justify-content-between">
    <!-- DESCRIPTION -->
    <!-- PENSAR SE NÃO FICA MELHOR DEIXAR A DESCRIÇÃO AQUI DO QUE NO BANNER - COLOCAR O CIDADE/UF LÁ EM CIMA?
    <div class="col m-3">
      <h2>Descrição</h2>
      <p><%= @collective.description %></p>
    </div>
    -->
  </div>
  <!-- MEMBER LIST -->
  <div class="col m-3">
    <h2>Membros</h2>
    <div class="all-members row align-items-center">
      <% members_in_3 = @collective.members.each_slice(3).to_a %>
      <%= render "shared/members_carousel", members_groups: members_in_3 %>
    </div>
  </div>
</div>
<!-- EVENTS -->
<div class="m-4">
  <h2>Próximos Eventos</h2>
  <div class="justify-content-evenly">
    <!-- CRIA UMA ARRAY DE ARRAYS COM 3 EVENTOS CADA -->
    <% events_in_3 = @collective.events.each_slice(3).to_a %>
    <%= render "shared/events_carousel", events_groups: events_in_3 %>
  </div>
</div>
