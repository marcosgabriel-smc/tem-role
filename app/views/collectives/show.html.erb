<div
  class= "masthead justify-content-center align-items-center d-flex"
  style="background-image: url('<%= cl_image_path @collective.banner.key, crop: :fill unless @collective.banner.key.nil? %>');">
  <div class="row d-flex color-overlay">
    <div class="text-center d-flex row">
      <div class="align-self-end">
        <h1 class="colec-title"><%= @collective.name %></h1>
      </div>
      <p class="colectivedesc text-break text-start fw-semibold"><%= @collective.description %></p>
    </div>
    <div class= "align-self-end d-flex justify-content-evenly w-100">
      <!--
      <h3>Members</h3>
      <h3>Events</h3>
      <h3>Mix Set</h3>
      -->
    </div>
  </div>
</div>
<div class="m-3">
  <!-- ROUTES BUTTONS ##TO-DO CENTER AND STYLE IT-->
  <div class="m-3">
    <%= link_to "Back to collectives", collectives_path %>
    <% if policy(@collective).edit? %>
      | <%= link_to "Edit this collective", edit_collective_path(@collective) %>
    <% end %>
    <% if current_user == @collective.owner && policy(Event).new? %>
      | <%= link_to 'Create a new event', new_event_path %>
    <% end %>
  </div>
  <div class="d-flex flex-row m-4 justify-content-between">
    <!-- DESCRIPTION -->
    <!-- PENSAR SE NÃO FICA MELHOR DEIXAR A DESCRIÇÃO AQUI DO QUE NO BANNER - COLOCAR O CIDADE/UF LÁ EM CIMA?
    <div class="col m-3">
      <h2>Descrição</h2>
      <p><%= @collective.description %></p>
    </div>
    -->
    <!-- GENRE LIST -->
    <div class="col m-3">
      <h2>Gêneros</h2>
      <ul>
        <% @collective.genres.each do |genre| %>
          <li><%= genre.name.capitalize %></li>
        <% end %>
      </ul>
    </div>
    <!-- MEMBER LIST -->
    <div class="col m-3">
      <h2>Membros</h2>
      <!-- Understand why when you access the page clicking in the collective the carousel does not work-->
      <div class="all-members row">
        <div id="carouselExampleControls" class="carousel slide" data-slide="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="col">
                <% owner = @collective.members.first %>
                <%= render "shared/member_card", member: owner %>
              </div>
            </div>
            <% @collective.members[1..-1].each do |member| %>
              <div class="carousel-item">
                <div class="col">
                  <%= render "shared/member_card", member: member %>
                </div>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- EVENTS -->
  <div class="m-4">
    <div class="m-3">
      <h2>Next Events</h2>
      <div class="d-flex flex-row align-items-center row">
        <% @collective.events.each do |event| %>
          <%= render 'events/event_card', event: %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<hr>
</div>
