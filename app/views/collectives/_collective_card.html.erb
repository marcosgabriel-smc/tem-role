<h2 class="col-3 row justify-content-center text-center" data-map-target="collective">
  <div>
    <a href="<%= collective_path(collective)%>">
      <% collective_avatar_class = "rounded-circle mb-2 avatar-large" %>
      <% if collective.logo.key.nil? %>
        <%= image_tag "collective_avatar.jpg", class: collective_avatar_class %>
      <% else %>
        <%= cl_image_tag collective.logo.key, class: collective_avatar_class %>
      <% end %>
    </a>
  </div>
  <%= link_to collective.name, collective, class: "" %>
  <% if defined?(user) && collective.owner == user %>
    <small><em>(Fundador)</em></small>
  <% end %>
</h2>
