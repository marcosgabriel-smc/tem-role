<div class="container-fluid centerpage d-flex flex-row">
  <div class="col-4 m-5">
    <h1><%= @event.name %></h1>
    <h2>por <%= link_to @event.collective.name, @event.collective %></h2>
    <p><%= @event.description %></p>
    <p><%= @event.start_time.strftime("%d/%m/%Y %H:%M") %></p>
    <p><%= @event.end_time.strftime("%d/%m/%Y %H:%M") %></p>
    <div>
      <% if policy(@event).edit? %>
        <%= link_to "Edit this event", edit_event_path(@event) %> |
      <% end %>
      <%= link_to "Back to events", events_path %>
    </div>
  </div>
  <div id="carouselExampleControls" class="carousel slide col-8" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active party-carousel">
        <%= image_tag "party_pic_1.jpeg", class: "d-block", alt: "First slide"  %>
      </div>
      <div class="carousel-item">
        <%= image_tag "party_pic_2.jpeg", class: "d-block w-100", alt: "Second slide"  %>
      </div>
      <div class="carousel-item">
        <%= image_tag "party_pic_3.jpeg", class: "d-block w-100", alt: "Third slide"  %>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
