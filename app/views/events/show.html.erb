<div class="container centerpage">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "party_pic_1.jpeg", {class: "d-block w-100", alt: "First slide" } %>
      </div>
      <div class="carousel-item">
        <%= image_tag "party_pic_2.jpeg", {class: "d-block w-100", alt: "Second slide" } %>
      </div>
      <div class="carousel-item">
        <%= image_tag "party_pic_3.jpeg", {class: "d-block w-100", alt: "Third slide" } %>
      </div>
    </div>
  </div>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= image_tag "party_pic_1.jpeg", {class: "d-block w-100", alt: "First slide" } %>
        </div>
        <div class="carousel-item">
          <%= image_tag "party_pic_2.jpeg", {class: "d-block w-100", alt: "Second slide" } %>
        </div>
        <div class="carousel-item">
          <%= image_tag "party_pic_3.jpeg", {class: "d-block w-100", alt: "Third slide" } %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <h1><%= @event.name %></h1>
    <h2>by <%= link_to @event.collective.name, @event.collective %></h2>
    <p><%= @event.description %></p>
    <p><%= @event.start_time %></p>
    <p><%= @event.end_time %></p>
    <div>
      <% if policy(@event).edit? %>
        <%= link_to "Edit this event", edit_event_path(@event) %> |
      <% end %>
      <%= link_to "Back to events", events_path %>
    </div>
  </div>
