<div class="container masthead-index justify-content-center align-items-center d-flex">
  <%= render "hero_banner_events" %>
</div>
<div class="container">
  <p style="color: green"><%= notice %></p>
  <h1 class="text-capitalize ms-3 mb-4">Eventos</h1>
  <div id="events" class="d-flex flex-row align-items-center justify-content-center row">
    <% @events.each do |event| %>
      <%= render "event_card", event: %>
    <% end %>
  </div>
  <div class="btn-new-event">
    <% if policy(@events).new? %>
      <%= link_to "New event", new_event_path, class: "btn btn-outline-dark" %>
    <% end %>
  </div>
</div>
